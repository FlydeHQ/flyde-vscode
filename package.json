{
  "name": "flyde-vscode",
  "displayName": "Flyde",
  "description": "Flyde editor for VSCode",
  "version": "0.0.2",
  "publisher": "flyde",
  "engines": {
    "vscode": "^1.69.0"
  },
  "icon": "icon.png",
  "repository": "https://github.com/flydehq/flyde-vscode",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:flydeEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "flydeEditor",
        "displayName": "Flyde Flow Editor",
        "selector": [
          {
            "filenamePattern": "*.flyde"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "flyde",
        "extensions": [
          ".flyde"
        ],
        "aliases": [
          "Flyde",
          "flyde"
        ],
        "icon": {
          "light": "./fileicons/flyde_vscode_dark.svg",
          "dark": "./fileicons/flyde_vscode_dark.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile && yarn run copy-editor",
    "compile": "tsc -p ./",
    "build": "yarn run compile",
    "copy-editor": "node copy-editor.js",
    "watch": "tsc -watch -p ./",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@flyde/dev-server": "^1.0.9",
    "@flyde/editor": "^1.0.5",
    "@types/react": "^17.0.0",
    "execa": "^6.1.0",
    "find-free-port": "^2.0.0"
  }
}
