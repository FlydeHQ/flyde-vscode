{
  "name": "flyde-vscode",
  "displayName": "Flyde",
  "description": "Flyde editor for VSCode",
  "version": "0.2.0",
  "publisher": "flyde",
  "engines": {
    "vscode": "^1.69.0"
  },
  "icon": "icon.png",
  "repository": "https://github.com/flydehq/flyde-vscode",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:flydeEditor",
    "onCommand:flyde.newFlow"
  ],
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "copy-editor": "mkdir -p editor-build && cp -r ../flyde/editor/build/ editor-build/.",
    "build-editor": "cd ../flyde/editor && yarn build && cd ../../flyde-vscode",
    "link-all": "npm link @flyde/dev-server && npm link @flyde/editor && npm link @flyde/flow-editor && npm link @flyde/runtime && npm link @flyde/core",
    "compile": "tsc -p ./",
    "build": "yarn run compile && yarn build-editor && yarn run copy-editor",
    "watch": "tsc -watch -p ./",
    "dev": "yarn watch",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "release": "vsce package && vsce publish minor"
  },
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "flydeEditor",
        "displayName": "Flyde Flow Editor",
        "selector": [
          {
            "filenamePattern": "*.flyde"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "flyde",
        "extensions": [
          ".flyde"
        ],
        "aliases": [
          "Flyde",
          "flyde"
        ],
        "icon": {
          "light": "./fileicons/icon.svg",
          "dark": "./fileicons/icon.svg"
        }
      }
    ],
    "commands": [
      {
        "command": "flyde.openAsText",
        "title": "Open Flow as Text"
      },
      {
        "command": "flyde.newFlow",
        "title": "New Flyde Flow"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == flyde",
          "command": "flyde.openAsText",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "flyde.newFlow",
          "group": "navigation"
        }
      ],
      "file/newFile": [
        {
          "command": "flyde.newFlow",
          "group": "flyde"
        }
      ]
    }
  },
  
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@flyde/core": "^1.0.3",
    "@flyde/dev-server": "^1.0.9",
    "@flyde/editor": "^1.0.7",
    "@flyde/flow-editor": "^1.0.4",
    "@flyde/runtime": "^1.0.1",
    "@types/react": "^17.0.0",
    "callsite": "^1.0.0",
    "cuid": "^2.1.8",
    "execa": "^6.1.0",
    "find-free-port": "^2.0.0",
    "resolve-from": "^5.0.0"
  }
}
